@model IEnumerable<Freelancer>

@{
    ViewData["Title"] = "List of Freelancers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.FreelancerId)</th>
                    <th>@Html.DisplayNameFor(model => model.ProfilePicURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FreelancerName)</th>
                    <th>@Html.DisplayNameFor(model => model.FreelancerBio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FreelancerId)
                        </td>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePicURL" alt="@item.FreelancerName" style="max-width: 100px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FreelancerName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FreelancerBio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.FreelancerId"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.FreelancerId"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.FreelancerId"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 80px;" class="text-white">
    <a asp-controller="Freelancers" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add new
    </a>
</div>