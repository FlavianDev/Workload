@model Freelancer

@{
    ViewData["Title"] = "Freelancer's Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details - @Model.FreelancerName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="PicPreview" width="150" height="150" alt="" />
                </div>
                <div class="form-group">
                    <label asp-for="ProfilePicURL" class="control-label"></label>
                    <input asp-for="ProfilePicURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FreelancerName" class="control-label"></label>
                    <input asp-for="FreelancerName" class="form-control" readonly />
                    <span asp-validation-for="FreelancerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FreelancerBio" class="control-label"></label>
                    <input asp-for="FreelancerBio" class="form-control" readonly />
                    <span asp-validation-for="FreelancerBio" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PicPreview');
            output.src = $(this).val();
        })
    </script>
}