@model IEnumerable<Service>

@{
    ViewData["Title"] = "List of Services";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
        @foreach (var item in Model)
        {
                @if (item.ServiceActive == true)
                {
                    <div class="card card-body mt-3">
                        <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                            <div class="mr-2 mb-3 mb-lg-0">
                                <img src="@item.ServicePicURL" width="150" height="150" alt="">
                            </div>

                            <div class="media-body">
                                <h6 class="media-title font-weight-semibold">
                                    <a asp-action="Details" asp-route-id="@item.ServiceId" data-abc="true">@item.ServiceName</a>
                                </h6>

                                <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                                    <li class="list-inline-item"><a asp-controller="Freelancers" asp-action="Details" asp-route-id="@item.Freelancer.FreelancerId" class="text-muted" data-abc="true">@item.Freelancer.FreelancerName</a></li>
                                </ul>

                                <p class="mb-3">@item.ServiceDescription</p>
                            </div>
                            <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                <h3 class="mb-0 font-weight-semibold">@item.ServicePrice.ToString("0.00") lei (@item.ServiceUM.ToString())</h3>
                            </div>
                        </div>
                        <div class="offset-2">
                            <p class="card-text float-right">
                                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.ServiceId"><i class="bi bi-eye-fill"></i>Detalii</a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@item.ServiceId"><i class="bi bi-cart-plus"></i>Adauga to cos</a>
                            </p>
                        </div>
                    </div>
                }
        }
        </div>
    </div>
</div>