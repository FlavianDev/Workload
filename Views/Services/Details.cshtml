@using WorkloadApp.Data.ViewModels
@model Service

@{
    ViewData["Title"] = Model.ServiceName;
}
<div class="container">
    <div class="row">
         <div class="card card-body mt-3">
                <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                    <div class="mr-2 mb-3 mb-lg-0">
                        <img src="@Model.ServicePicURL" width="300" height="300" alt="">
                    </div>

                    <div class="media-body">
                        <h6 class="media-title font-weight-semibold">
                        <a href="#" data-abc="true">@Model.ServiceName</a>
                        </h6>

                        <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                        <li class="list-inline-item"><a asp-controller="Freelancers" asp-action="Details" asp-route-id="@Model.Freelancer.FreelancerId" class="text-muted" data-abc="true">@Model.Freelancer.FreelancerName</a></li>
                        </ul>
                    <p class="mb-3">@Model.ServiceDescription</p>
                    </div>
                    <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                    <h3 class="mb-0 font-weight-semibold">@Model.ServicePrice.ToString("0.00") lei (@Model.ServiceUM.ToString())</h3>
                    </div>
                </div>
            <p class="mr-2 mb-lg-0 card-text">
                <b>Cities available: </b>
                    @foreach (var city in Model.Cities_Services)
                    {
                        <div class="border-info">
                            <p> @city.City.CityName </p>
                        </div>
                    }
            </p>
            <div class="offset-2">
                <p class="card-text float-right">
                    <a class="btn btn-outline-primary" asp-action="Index">Inapoi la lista</a>
                    <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@Model.ServiceId"><i class="bi bi-cart-plus"></i>Adauga to cos</a>
                </p>
            </div>
         </div>
    </div>
</div>