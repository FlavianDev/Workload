@using WorkloadApp.Data.ViewModels
@model FreelancerVM;

@{
    ViewData["Title"] = "Become a Freelancer";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>
                Become a Freelancer
            </h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>@TempData["Error"]</span>
            </div>

        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="BecomeFreelancer">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img class="rounded-circle" id="PicPreview" width="150" height="150" alt="" />
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfilePicURL" class="control-label"></label>
                        <input asp-for="ProfilePicURL" class="form-control" />
                        <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FreelancerName" class="control-label"></label>
                        <input asp-for="FreelancerName" class="form-control" />
                        <span asp-validation-for="FreelancerName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FreelancerBio" class="control-label"></label>
                        <input asp-for="FreelancerBio" class="form-control" />
                        <span asp-validation-for="FreelancerBio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Become a Freelancer" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-controller="Services" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PicPreview');
            output.src = $(this).val();
        })

        $('#ServicePicURL').on("change", function () {
            var output = document.getElementById('PicPreview');
            output.src = $(this).val();
        })
    </script>
}