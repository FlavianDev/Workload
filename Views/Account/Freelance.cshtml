@model IEnumerable<Service>

@{
    ViewData["Title"] = "Freelance";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ServicePicURL)</th>
                    <th>@Html.DisplayNameFor(model => model.ServiceName)</th>
                    <th>@Html.DisplayNameFor(model => model.ServiceDescription)</th>
                    <th>@Html.DisplayNameFor(model => model.ServicePrice)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ServicePicURL" alt="@item.ServiceName" style="max-width: 100px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ServiceName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ServiceDescription)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ServicePrice)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Services" asp-action="Edit" asp-route-id="@item.ServiceId"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-controller="Services" asp-action="Details" asp-route-id="@item.ServiceId"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-secondary text-white" asp-controller="Orders" asp-action="ServiceOrders" asp-route-id="@item.ServiceId"><i class="bi bi-eye"></i>Orders </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 80px;" class="text-white">
    <a asp-controller="Services" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add new
    </a>
</div>